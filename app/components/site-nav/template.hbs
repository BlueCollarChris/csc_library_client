<div class="leftpanel">
 <div class="leftpanelinner">
   <div class="media leftpanel-profile">
     <div class="media-left">

     </div>
     <div class="media-body">
       <h4 class="media-heading"><i class='fa fa-user'></i>&nbsp;{{session.data.authenticated.first_name}}&nbsp;{{session.data.authenticated.last_name}}<a data-toggle="collapse" data-target="#loguserinfo" class="pull-right"><i class="fa fa-angle-down"></i></a></h4>
     </div>
   </div>

   <div class="leftpanel-userinfo collapse" id="loguserinfo">
     {{#if session.data.authenticated.address}}
       <h5 class="sidebar-title">Address</h5>
       <address>
         {{session.data.authenticated.address.street}}<br/>
         {{session.data.authenticated.address.city}}&nbsp;{{session.data.authenticated.address.state}}<br/>
         {{session.data.authenticated.address.country}}&nbsp;{{session.data.authenticated.address.zip}}
       </address>
     {{/if}}
     <h5 class="sidebar-title">Contact</h5>
     <ul class="list-group">
       <li class="list-group-item">
         <label class="pull-left">Email</label>
         <span class="pull-right">{{session.data.authenticated.email}}</span>
       </li>
       {{#if session.data.authenticated.phone}}
         <li class="list-group-item">
           <label class="pull-left">Mobile</label>
           <span class="pull-right">{{session.data.authenticated.phone}}</span>
         </li>
       {{/if}}
     </ul>
   </div><!-- leftpanel-userinfo -->

   <ul class="nav nav-tabs nav-justified nav-sidebar">
     <li class="tooltips active" data-toggle="tooltip" title="Main Menu"><a data-toggle="tab" data-target="#mainmenu"><i class="tooltips fa fa-ellipsis-h"></i></a></li>
     {{#if session.data.authenticated.isStaff}}
        <li class="tooltips" data-toggle="tooltip" title="Settings"><a data-toggle="tab" data-target="#settings"><i class="fa fa-cog"></i></a></li>
     {{/if}}
     <li class="tooltips" data-toggle="tooltip" title="Log Out"><a {{action 'logout'}}><i class="fa fa-sign-out"></i></a></li>
   </ul>

   <div class="tab-content">

     <!-- ######################## MAIN MENU ##################### -->

     <div class="tab-pane active" id="mainmenu">
       <h5 class="sidebar-title">Main Menu</h5>
       <ul class="nav nav-pills nav-stacked nav-quirk">
         {{#if session.data.authenticated.isStaff}}
           <li>{{#link-to 'staff.dashboard'}}<i class="fa fa-tachometer"></i> <span>Dashboard</span>{{/link-to}}</li>
           <li>{{#link-to 'staff.terminal'}}<span class="badge pull-right"></span><i class="fa fa-terminal"></i> <span>Terminal</span>{{/link-to}}</li>
         {{else}}
         <li>{{#link-to 'customer.dashboard'}}<i class="fa fa-tachometer"></i> <span>Dashboard</span>{{/link-to}}</li>
         <li>{{#link-to 'customer.profile'}}<span class="badge pull-right"></span><i class="fa fa-user"></i> <span>Terminal</span>{{/link-to}}</li>
         {{/if}}
       </ul>
     </div>

     <!-- ################### ADMIN MENUE ################### -->

     <div class="tab-pane" id="settings">
       <h5 class="sidebar-title">Admin Settings</h5>
       <ul class="nav nav-pills nav-stacked nav-quirk">
         <li>
           {{#link-to 'admin.users'}}<i class="fa fa-users"></i><span>Users</span>{{/link-to}}
         </li>
         <li>
           {{#link-to 'admin.holdings'}}<i class="fa fa-database"></i><span>Holdings</span>{{/link-to}}
         </li>
         <li>
           {{#link-to 'admin.authors'}}<i class="fa fa-pencil"></i><span>Authors</span>{{/link-to}}
         </li>
         <li>
           {{#link-to 'admin.publishers'}}<i class="fa fa-bank"></i><span>Publishers</span>{{/link-to}}
         </li>
       </ul>
     </div>
   </div>
 </div>
</div>
