<header>
  <div class="headerpanel">
    <div class="logopanel">
      <h2 class='text-center'>{{#link-to 'index'}}<i class='fa fa-bank'></i>{{/link-to}}</h2>
    </div>

    <div class="headerbar">
      <a id="menuToggle" class="menutoggle"><i class="fa fa-bars"></i></a>
      <div class="header-right">
        <ul class="headermenu">
          <li>
            <div class="btn-group">
              <button type="button" class="btn btn-logged" data-toggle="dropdown">
                {{session.data.authenticated.first_name}}
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu pull-right">
                {{#if session.authenticated.isStaff}}
                  <li>{{#link-to 'staff.profile'}}<i class="fa fa-user"></i> My Profile{{/link-to}}</li>
                {{else}}
                  <li>{{#link-to 'customer.profile'}}<i class="fa fa-user"></i> My Profile{{/link-to}}</li>
                {{/if}}
                <li><a href='' {{action 'logout'}}><i class="fa fa-minus-square-o"></i> Log Out</a></li>
              </ul>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>
