{{#if session.data.authenticated.isStaff}}
  <ol class="breadcrumb breadcrumb-quirk">
    <li>{{#link-to 'index'}}<i class="fa fa-home mr5"></i>Home{{/link-to}}</li>
    <li>{{#link-to 'admin.users'}}Users{{/link-to}}</li>
    <li class="active">Create</li>
  </ol>
  <div class="panel">
    <div class="panel-body">
      <form class="form-horizontal">
        <div class='col-xs-12 col-sm-3'>
          <div class="form-group">
            <label class="col-sm-4 control-label">User Type</label>
            <div class="col-sm-8">
              <label class="ckbox ckbox-primary">
                <input onchange={{action 'updateUserType' 'COM'}} checked={{user.isCom}} type="checkbox"/><span>Community User</span>
              </label>
              <label class="ckbox ckbox-primary">
                <input onchange={{action 'updateUserType' 'STU'}} checked={{user.isStudent}} type="checkbox"/><span>Student</span>
              </label>
              <label class="ckbox ckbox-primary">
                <input onchange={{action 'updateUserType' 'STA'}} checked={{user.isStaff}} type="checkbox"/><span>Staff</span>
              </label>
            </div>
          </div>
        </div>
        <div class='col-xs-12 col-sm-9'>
          <div class="form-group">
            <label class="col-sm-3 control-label">First Name <span class="text-danger">*</span></label>
            <div class="col-sm-8">
              {{input type="text" name="first-name" value=user.first_name class="form-control" placeholder="Type your first name..."}}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label">Last Name <span class="text-danger">*</span></label>
            <div class="col-sm-8">
              {{input type="text" name="last-name" value=user.last_name class="form-control" placeholder="Type your last name..."}}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label">Email <span class="text-danger">*</span></label>
            <div class="col-sm-8">
              {{input type="text" name="email" value=user.email class="form-control" placeholder="Type your email..."}}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label">Phone <span class="text-danger">*</span></label>
            <div class="col-sm-8">
              {{input type="text" name="phone" value=user.phone class="form-control" placeholder="Type your mobile phone..."}}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label">Street<span class="text-danger">*</span></label>
            <div class="col-sm-8">
              {{input type="text" name="street" value=address.street class="form-control" placeholder="Type your street..."}}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label">Apt/Suite #</label>
            <div class="col-sm-8">
              {{input type="text" name="apt" value=address.apt class="form-control" placeholder="Type your apt/suite #..."}}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label">City<span class="text-danger">*</span></label>
            <div class="col-sm-8">
              {{input type="text" name="city" value=address.city class="form-control" placeholder="Type your city..."}}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label">State<span class="text-danger">*</span></label>
            <div class="col-sm-8">
              {{input type="text" name="state" value=address.state class="form-control" placeholder="Type your state..."}}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label">Country<span class="text-danger">*</span></label>
            <div class="col-sm-8">
              {{input type="text" name="country" value=address.country class="form-control" placeholder="Type your country..."}}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label">Zip Code<span class="text-danger">*</span></label>
            <div class="col-sm-8">
              {{input type="text" name="zip" value=address.zip class="form-control" placeholder="Type your zip code..."}}
            </div>
          </div>
          {{#if user.isStudent}}
            <div class="form-group">
              <label class="col-sm-3 control-label">Class<span class="text-danger">*</span></label>
              <div class="col-sm-8">
                {{input type="number" name="class-number" min='1' max='4' value=user_type.student_class class="form-control" placeholder="Freshman, Sophmore, Junior, Senior..."}}
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Major</label>
              <div class="col-sm-8">
                {{input type="text" name="major" value=user_type.major class="form-control" placeholder="Type your major..."}}
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Minor</label>
              <div class="col-sm-8">
                {{input type="text" name="minor" value=user_type.minor class="form-control" placeholder="Type your minor..."}}
              </div>
            </div>
          {{/if}}
          {{#if user.isStaff}}
            <div class="form-group">
              <label class="col-sm-3 control-label">Rank<span class="text-danger">*</span></label>
              <div class="col-sm-8">
                {{input type="text" name="rank-date" value=user_type.rank class="form-control"}}
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">System Role<span class="text-danger">*</span></label>
              <div class="col-sm-8">
                <label class="ckbox ckbox-primary">
                  <input onchange={{action 'updateUserRole' 'worker'}} checked={{user_type.isWorker}} type="checkbox"/><span>Worker</span>
                </label>
                <label class="ckbox ckbox-primary">
                  <input onchange={{action 'updateUserRole' 'admin'}} checked={{user_type.isAdmin}} type="checkbox"/><span>Admin</span>
                </label>
                <label class="ckbox ckbox-primary">
                  <input onchange={{action 'updateUserRole' 'super_admin'}} checked={{user_type.isSuper}} type="checkbox"/><span>Super Admin</span>
                </label>
              </div>
            </div>
          {{/if}}
          {{#if user.isCom}}
            <div class="form-group">
              <label class="col-sm-3 control-label">Member Expiration Date<span class="text-danger">*</span></label>
              <div class="col-sm-8">
                {{input type="date" name="expiration-date" value=user_type.expiration_dt class="form-control"}}
              </div>
            </div>
          {{/if}}
          <div class="row">
            <div class="col-sm-9 col-sm-offset-3">
              <button class="btn btn-quirk btn-wide btn-success btn-stroke" {{action 'save'}}>Save</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
{{/if}}
